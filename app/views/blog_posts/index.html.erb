<h1>Blog Posts</h1>

<% @blog_posts.each do |blog_post| %>
  <div>
    <h2>
      <%= link_to blog_post.title, blog_post  %>
    </h2>
    <% if blog_post.draft? %>
      <div class="p-2 rounded hover:bg-gray-100 text-gray-900">
        Draft
      </div>
    <% elsif blog_post.scheduled? %>
      <div class="p-2 rounded hover:bg-blue-100 text-gray-900">
        Draft
      </div>
    <% end %>
    <div>
      <%= blog_post.content %>
    </div>
  </div>
<% end  %>

<div class="my-4">
  <%== pagy_nav(@pagy) %>
</div>
  